{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"DOM",
			"ESNext",
			"ES2022"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"include": [
		"*.js",
		"**/*.js"
	]
}